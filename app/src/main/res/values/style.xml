<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="page_background">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="ButtonStyled" parent="android:style/Widget.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="OverlayTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DetailsTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>